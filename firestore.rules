rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    match /todoLists/{listID} {
      allow read, create, update, delete: if true;

      match /todos/{todoID} {
        function notEmptyTodo() {
          return request.resource.data.description.size() > 0;
        }

        function isNewTodo() {
          return request.resource.data.done == false;
        }

        allow list: if true;
        allow create: if notEmptyTodo() && isNewTodo();
        allow update: if notEmptyTodo();
        allow delete: if true;
      }
    }
  }
}